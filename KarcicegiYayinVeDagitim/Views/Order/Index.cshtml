@using KarcicegiYayinVeDagitim.Models
@model IEnumerable<AdminOrderModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <!--/.box-header-->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Sipariş Numarası</th>
                            <th>Sipariş Tarihi</th>
                            <th>Sipariş Durumu</th>
                            <th>Toplam Tutar (₺)</th>
                            <th>Ürün Sayısı</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.OrderNumber
                            </td>
                            <td>
                                @item.OrderDate
                            </td>
                            <td>
                                @item.OrderState
                            <td>
                                @item.Total ₺
                            </td>
                            <td>
                                @item.Count
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="@Url.Action("Details",new { id = item.Id })"><i class="fa fa-fw fa-edit"></i>Detay Sayfası</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Sipariş Numarası</th>
                            <th>Sipariş Tarihi</th>
                            <th>Sipariş Durumu</th>
                            <th>Toplam Tutar (₺)</th>
                            <th>Ürün Sayısı</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->
